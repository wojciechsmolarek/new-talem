---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "TALEM - Agencja SEO | Wzrost Oparty na Danych",
  description = "Profesjonalna agencja SEO. Zwiększamy widoczność i ruch organiczny. Mierzalne wyniki, transparentne raportowanie.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://talem.eu/og-image.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="pl_PL" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://talem.eu/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.ico" />

    <!-- Font Optimization -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&family=JetBrains+Mono:wght@400;600;700&family=Manrope:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Consolidated Schema.org Markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "@id": "https://talem.eu/#organization",
        "name": "TALEM - Agencja SEO",
        "alternateName": "Agencja SEO Talem Bydgoszcz",
        "description": "Najdłużej działająca firma na bydgoskim rynku usług SEO. Od 2006 roku wykorzystujemy zaawansowane techniki SEO, aby pomagać naszym klientom odnosić sukcesy w wyszukiwarkach.",
        "url": "https://talem.eu",
        "logo": "https://www.talem.eu/wp-content/uploads/2020/11/Agencja-SEO-Talem-Bydgoszcz-130-e1672571178116-220x0-c-default.png",
        "image": "https://www.talem.eu/wp-content/uploads/2020/11/Agencja-SEO-Talem-Bydgoszcz-130-e1672571178116-220x0-c-default.png",
        "foundingDate": "2006",
        "email": "hello@talem.pl",
        "telephone": ["+48523667070", "801080238"],
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "ul. Toruńska 33",
          "addressLocality": "Bydgoszcz",
          "addressRegion": "Kujawsko-Pomorskie",
          "addressCountry": "PL"
        },
        "areaServed": {
          "@type": "Country",
          "name": "Polska"
        },
        "priceRange": "$$",
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Usługi SEO",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "SEO Techniczne",
                "description": "Audyt i optymalizacja fundamentów: szybkość, crawlability, Core Web Vitals, schema markup, mobile-first optimization."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Content Marketing",
                "description": "Strategia treści oparta na analizie konkurencji i search intent. Keyword research, content planning, SEO copywriting."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Link Building",
                "description": "Budowanie autorytetu domeny poprzez wysokiej jakości linki. Digital PR, content partnerships, backlink monitoring."
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Local SEO",
                "description": "Optymalizacja dla wyszukiwań lokalnych i Google Maps. GMB optimization, local citations, review management."
              }
            }
          ]
        },
        "sameAs": ["https://www.talem.eu"]
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
